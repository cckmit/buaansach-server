<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="init_user_data" author="ductv">
        <loadData
                file="config/liquibase/data/csv/user.csv"
                separator=";"
                tableName="bas_user">
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>
    </changeSet>
    <changeSet id="init_authority_data" author="ductv">
        <loadData
                file="config/liquibase/data/csv/authority.csv"
                separator=";"
                tableName="bas_authority">
            <column name="name" type="string"/>
        </loadData>
    </changeSet>
    <changeSet id="init_user_authority_data" author="ductv">
        <loadData
                file="config/liquibase/data/csv/user_authority.csv"
                separator=";"
                tableName="bas_user_authority">
            <column name="user_id" type="numeric"/>
        </loadData>
    </changeSet>
    <changeSet id="init_voucher_data" author="ductv">
        <loadData
                file="config/liquibase/data/csv/voucher.csv"
                separator=";"
                tableName="bas_voucher">
            <column name="voucher_discount" type="numeric"/>
            <column name="voucher_enable" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>
    </changeSet>
    <changeSet id="init_voucher_usage_condition_data" author="ductv">
        <loadData
                file="config/liquibase/data/csv/voucher_usage_condition.csv"
                separator=";"
                tableName="bas_voucher_usage_condition">
            <column name="max_usage" type="numeric"/>
            <column name="created_date" type="timestamp"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
